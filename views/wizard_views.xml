<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Form -->
    <record id="view_pdf_process_wizard_form" model="ir.ui.view">
        <field name="name">pdf.process.wizard.form</field>
        <field name="model">pdf.process.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="batch_process"/>
                    <field name="pdf_id" attrs="{'invisible': [('batch_process', '=', True)]}"/>
                    <field name="pdf_ids" attrs="{'invisible': [('batch_process', '=', False)]}"/>
                </group>
                
                <footer>
                    <button name="action_process" 
                            string="Procesar" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>